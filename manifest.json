{
  "manifest_version": 3,
  "name": "Marketing Productivity Suite",
  "version": "1.0",
  "description": "A comprehensive Google Chrome extension for marketing professionals, centralizing task management, rich text note-taking, and YouTube-integrated multimedia learning.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Marketing Productivity Suite"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "unlimitedStorage",
    "https://www.youtube.com/*"
  ]
}